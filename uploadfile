import React, { useState } from 'react';
import { View, Button } from 'react-native';
import * as ImagePicker from 'expo-image-picker';
import * as FileSystem from 'expo-file-system';

const App = () => {
  const [image, setImage] = useState(null);

  const pickImage = async () => {
    let result = await ImagePicker.launchImageLibraryAsync({
      mediaTypes: ImagePicker.MediaTypeOptions.All,
      allowsEditing: true,
      aspect: [4, 3],
      quality: 0,
    });

    if (!result.cancelled) {
      setImage(result.uri);
      console.log(result);
      console.log(result[0]);
      const fileName = result[0].fileName;
      const fileType = result[0].mimeType;

      console.log(`File Name: ${fileName}`);
      console.log(`File Type: ${fileType}`);
      
      uploadImage(result.uri, fileName, fileType);
    }
  };

  const uploadImage = async (uri, fileName, fileType) => {
    const formData = new FormData();
    formData.append('file', {
      uri,
      name: fileName,  // Use the extracted file name
      type: fileType,  // Use the extracted MIME type
    });

    try {
      const response = await fetch('API LINK HERE', {
        method: 'POST',
        body: formData,
        headers: {
          Accept: 'application/json',
          // 'Content-Type': 'multipart/form-data', // Do not set this manually for FormData
        },
      });
      const data = await response.json();
      console.log(data);
    } catch (error) {
      console.error('Error uploading image:', error);
    }
  };

  return (
    <View>
      <Button title="Pick an image from camera roll" onPress={pickImage} />
    </View>
  );
};

export default App;
